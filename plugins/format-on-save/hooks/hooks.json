{
  "description": "Auto-format files after Edit/Write operations",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/format-on-save.sh",
            "async": true,
            "timeout": 60
          }
        ]
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "bash ${CLAUDE_PLUGIN_ROOT:-${COPILOT_PLUGIN_ROOT}}/scripts/format-on-save.sh"
      }
    ]
  }
}
